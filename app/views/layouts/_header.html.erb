<header>
  <nav>
    <%= link_to image_tag("logo.png"), root_path %>
    <ul class="left">
      <li>
        <%= link_to "Upcoming", root_path  %>
      </li>
      <li>
        <%= link_to "Past", filtered_event_path(:past)  %>
      </li>
      <li>
        <%= link_to "Free", filtered_event_path(:free)  %>
      </li>
      <li>
        <%= link_to "Recent", filtered_event_path(:recent)  %>
      </li>
    </ul>
    <ul class="right">
      <% if current_user %>
        <li>
          <%= link_to "Account Settings", user_path(current_user) %>
        </li>
        <li>
          <%= link_to "Sign Out", session_path, method: :delete, class: "button" %>
        </li>

      <% else %>
        <li>
          <%= link_to "Log in", new_session_path, class: "button"  %>
        </li>

        <li>
          <%= link_to "Sign up", signup_path, class: "button"  %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
