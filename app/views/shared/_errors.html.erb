<% if object.errors.any? %>
  <section class="errors">
    <h2>
      Ooops! Your form could not be save!
    </h2>
    <h3>
      Please correct the following:
      <%= pluralize(object.errors.size, "error") %>:
    </h3>
    <ul>
      <% object.errors.full_messages.each do |msg|  %>
        <li> <%= msg %> </li>
        <% end %>
    </ul>
  </section>
<% end %>
