<section class="user">
  <h1>
    <%= profile_image(@user) %>
    <%= @user.name %>

    <%= @user.username %>

  </h1>
  <h2>
    <%= mail_to(@user.email) %>
  </h2>
  <div class="actions">
    <%= link_to "Edit Account", edit_user_path(@user), class: "button edit"  %>
    <%= link_to "Delete", @user, method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "button delete" %>
  </div>


</section>
